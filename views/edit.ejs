<%- include ('./partials/header') %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit "<%= blog.title %>" </div>

  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="post">
    <div class="field">
      <label>Title*</label>
      <input required type="text" name="blog[title]" placeholder="Title" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label>Image*</label>
      <input required type="text" name="blog[image]" placeholder="Image URL" value="<%= blog.image %>">
    </div>
    <div class="field">
      <label>Blog Post*</label>
      <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js"></script>
      <textarea required name="blog[body]" rows="8"><%= blog.body %></textarea>
      <script>
        new FroalaEditor('textarea');
      </script>
    </div>
    <input class="ui primary button" type="submit">
  </form>
</div>

<%- include ('./partials/footer') %>
