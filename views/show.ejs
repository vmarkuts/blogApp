<%- include ('./partials/header') %>

<div class="ui main text container segment">
  <div class="ui huge header">
    <%= blog.title %>
  </div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.image %>" alt="blog post image">
      <div class="content">
        <span>
          <%= blog.created.toDateString() %>
        </span>
      </div>
      <div class="description">
        <p><%= blog.body %></p>
      </div>
      <a class="myButton editButton" href="./<%= blog._id %>/edit"><i class="edit icon"></i></a>
      <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
        <button class="myButton deleteButton"><i class="trash alternate icon"></i></button>
      </form>
    </div>
  </div>
</div>

<%- include ('./partials/footer') %>
